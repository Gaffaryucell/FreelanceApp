<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FreelanceApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
    </style>

    <style name="Theme.FreelanceApp" parent="Base.Theme.FreelanceApp" />

    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/holo_blue_light</item>
    </style>
    <!-- Button Styles -->
    <style name="RegisterButtonStyle">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColor">#525CEB</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/mediumButtonHeight</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="DefaultButtonStyle">
        <item name="android:textColor">#F8EDFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">Sonraki</item>
        <item name="android:background">@drawable/welcome_screen_next_button_bg
        </item> <!-- Koyu kahverengi arka plan -->
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CancelButtonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">Sonraki</item>
        <item name="android:background">@drawable/cancel_button_bg
        </item> <!-- Koyu kahverengi arka plan -->
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Text Styles -->
    <style name="WelcomeTextStyle">
        <item name="android:textColor">#f8cd65</item> <!-- Sarı renk -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">HOŞ GELDİN</item>
    </style>

    <style name="WelcomeDescriptionTextStyle">
        <item name="android:textColor">#f8cd65</item> <!-- Koyu kahverengi tonu -->
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">@string/welcome_description_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- EditText Styles -->
    <style name="RegisterEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/edittextHeight</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColorHint">#444444</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Search View Styles -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/search_view_background_light</item>
    </style>


    <!-- Bottom Nav Style -->
    <style name="MyBottomNavigationViewTheme" parent="Widget.Design.BottomNavigationView">
        <!-- Seçili eleman rengi -->
        <item name="itemBackground">@color/light_bottom_nav_bg</item>
        <!-- Seçili olmayan eleman rengi -->
        <item name="itemIconTint">@color/light_selected_item_color</item>
        <item name="itemTextColor">@color/light_selected_item_color</item>
    </style>

    <!-- Filter ImageView Style -->
    <style name="FilterImageviewStyle">
        <item name="android:src">@drawable/filter_black</item>
    </style>

    <!-- App Background Style -->
    <style name="AppBackGroundStyle">
        <item name="android:background">@color/light_bg_color</item>
    </style>

    <!-- Icons Style -->
    <style name="CameraIconStyle">
        <item name="android:src">@drawable/baseline_camera_dark</item>
    </style>

    <style name="MessageIconStyle">
        <item name="android:src">@drawable/message_icon_dark</item>
    </style>

</resources>